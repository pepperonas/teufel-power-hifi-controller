#!/bin/bash

# Teufel Power HiFi Controller Wrapper
# F체hrt das Python-Script automatisch mit sudo aus

SCRIPT_DIR="$(dirname "$(readlink -f "$0")")"
PYTHON_SCRIPT="$SCRIPT_DIR/teufel-power-hifi-controller.py"

# Pr체fe ob pigpio daemon l채uft
if ! pgrep pigpiod > /dev/null; then
    echo "Starte pigpio daemon..."
    sudo pigpiod
    sleep 1
fi

# F체hre Python-Script mit sudo aus und leite stdin weiter
exec sudo python3 "$PYTHON_SCRIPT" "$@"